ssh nologin: a@A~>  ssh b@B mkdir -p .ssh    #Create remote dir
ssh nologin: a@A~>  cat .ssh/id_rsa.pub | ssh b@B 'cat >> .ssh/authorized_keys'  #Copy pub to remote
